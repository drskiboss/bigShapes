  /* Adjust the aspect ratio of the carousel */
  sl-carousel {
    width: 100%;
    height: auto;
    aspect-ratio: 3 / 4; /* Adjust this for your desired aspect ratio (e.g., 4/3, 1/1) */
  }

  /* Adjust the individual carousel items */
  sl-carousel-item {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  /* Ensure that images scale correctly within the items */
  sl-carousel-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;  /* This ensures images fill the container without distortion */
  }
</style>

