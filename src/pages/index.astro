---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "@shoelace-style/shoelace/dist/themes/light.css";
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>


<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>

   <!-- Shoelace Carousel -->
    <sl-carousel navigation>
      <sl-carousel-item>
        <img src="https://placehold.co/800x800.png?text=Image+1" alt="Image 1" />
      </sl-carousel-item>
      <sl-carousel-item>
        <img src="https://placehold.co/800x800.png?text=Image+2" alt="Image 2" />
      </sl-carousel-item>
      <sl-carousel-item>
        <img src="https://placehold.co/800x800.png?text=Image+3" alt="Image 3" />
      </sl-carousel-item>


    <!-- Navigation Controls (Next and Previous) -->
        <sl-button-next slot="next">Next</sl-button-next>
        <sl-button-prev slot="prev">Previous</sl-button-prev>

      </sl-carousel>

 
		<Footer />

<script>
  // setBasePath to tell Shoelace where to load icons from.
  import { setBasePath } from '@shoelace-style/shoelace/dist/utilities/base-path.js';
  setBasePath('/shoelace-assets/');

  // Load all components.
  import '@shoelace-style/shoelace';
</script>
	</body>
</html>
